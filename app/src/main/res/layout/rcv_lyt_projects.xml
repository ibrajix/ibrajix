<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/lyt_with_corner_radius">

    <TextView
        android:id="@+id/txt_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Music Player"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_project"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_project_name" />

    <TextView
        android:id="@+id/txt_project_description"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:text="A simple music player, very easy to use and detailed to work with"
        app:layout_constraintEnd_toStartOf="@+id/img_project"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_project_name" />

    <TextView
        android:id="@+id/txt_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_orange"
        android:text="https://playstore.com/dmp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_project"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_project_description"
        app:layout_constraintTop_toBottomOf="@+id/txt_project_description" />

</androidx.constraintlayout.widget.ConstraintLayout>